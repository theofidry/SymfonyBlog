<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Syf Blog{% endblock %}</title>
        {% block stylesheets %}
            {# Open Sans font from Google CDN #}
            <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,
600italic,700italic,400,600,700,300&subset=latin"/>
            {# Boostrap 3 CSS CDN #}
            <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="wrapper">

            {# Header #}
            <header id="header">
                {% include '::header.html.twig' %}
            </header>

            {# Body #}
            <div class="col-sm-8">
                {% block body %}{% endblock %}
            </div>

            {# Sidebar #}
            <div class="col-sm-3 col-sm-offset-1" id="sidebar">
                {% include '::sidebar.html.twig' %}
            </div>

            {# Footer #}
            <footer id="footer">
                {% include '::footer.html.twig' %}
            </footer>
        </div>

        {% block javascripts %}
            <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
            <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
