{% extends 'YrdifBlogBundle:ContactRequest:layout.html.twig' %}

{% block body -%}

    <div class="page-header">
        <h1>Contact Requests</h1>
    </div>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ entity.subject }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ entity.content }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions action-list">
    <li>
        <a href="{{ path('contact-request') }}" class="btn btn-default">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('contact-request_edit', { 'id': entity.id }) }}" class="btn btn-warning">
            Edit
        </a>
    </li>
    <li>
        {{ form_start(delete_form) }}
        {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
        {{ form_end(delete_form) }}
    </li>
</ul>
{% endblock %}
