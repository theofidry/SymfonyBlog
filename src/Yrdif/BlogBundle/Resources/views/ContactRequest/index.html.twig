{% extends 'YrdifBlogBundle:ContactRequest:layout.html.twig' %}

{% block body -%}

    <div class="page-header">
        <h1>Contact Requests</h1>
    </div>

    <table class="records_list table">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contact-request_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.subject }}</td>
                <td>{{ entity.content }}</td>
                <td>
                    <ul class="action-list">
                        <li>
                            <a href="{{ path('contact-request_show', { 'id': entity.id }) }}"
                               class="btn btn-info">
                                show
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('contact-request_edit', { 'id': entity.id }) }}"
                               class="btn btn-warning">
                                edit
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="no-list">
        <li>
            <a href="{{ path('contact-request_new') }}" class="btn btn-default">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
