{% extends 'YrdifBlogBundle:Post:layout.html.twig' %}

{% block body -%}

    <div class="page-header">
        <h1>Post list</h1>
    </div>

    <table class="records_list table">
        <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>
            <th>Image</th>
            <th>Tags</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.image }}</td>
                <td>{{ entity.tags }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul class="action-list">
                        <li>
                            <a href="{{ path('post_show', { 'id': entity.id }) }}"
                               class="btn btn-info">
                                show
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': entity.id }) }}" class="btn btn-warning">
                                edit
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="action-list">
        <li>
            <a href="{{ path('post_new') }}" class="btn btn-default">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
