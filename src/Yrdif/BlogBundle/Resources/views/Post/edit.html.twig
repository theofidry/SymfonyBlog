{% extends 'YrdifBlogBundle:Post:layout.html.twig' %}

{% block body -%}

    <div class="page-header">
        <h1>Post</h1>
    </div>

    {{ form(edit_form) }}

    <ul class="record_actions action-list">
        <li>
            <a href="{{ path('post') }}" class="btn btn-default">
                Back to the list
            </a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
