{% extends 'YrdifBlogBundle:Post:layout.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>Post</h1>
    </div>

    <table class="record_properties table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ entity.author }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ entity.content }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ entity.image }}</td>
        </tr>
        <tr>
            <th>Tags</th>
            <td>{{ entity.tags }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions action-list">
        <li>
            <a href="{{ path('post') }}" class="btn btn-default">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': entity.id }) }}" class="btn btn-warning">
                Edit
            </a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
