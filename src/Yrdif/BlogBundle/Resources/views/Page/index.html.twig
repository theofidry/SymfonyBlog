{% extends 'YrdifBlogBundle::layout.html.twig' %}

{% block body %}

    {% for post in posts %}
        <article class="post">
            <header>
                <h2>
                    {{ post.title }}<br/>
                    <small>Created at {{ post.createdAt|date('d/m/Y h:iA') }} by <mark>{{ post.author }}</mark>.</small>
                </h2>

                <p>Tags: <span class="highlight">{{ post.tags }}</span></p>
            </header>

            <img src="{{ asset(['images/', post.image]|join) }}" />

            <div>
                <p>{{ post.content(500) }}</p>
                <p><a href="{{ path('post_show', { 'id': post.id }) }}" class="btn btn-default">Continue reading...</a></p>
            </div>
        </article>
    {% endfor %}

{% endblock %}
